{
    "manifest_version": 3,
    "minimum_chrome_version": "111",

    "name": "Cidercord (Unofficial Vencord)",
    "description": "쉽게 사이다 api를 사용할 수 있게 해주는 브라우저 확장 프로그램입니다.",
    "author": "Saintliy",
    "homepage_url": "https://github.com/giyeoum/UnofficialCiderVencord",
    "icons": {
        "128": "icon.png"
    },

    "host_permissions": ["*://*.discord.com/*", "https://raw.githubusercontent.com/*"],

    "permissions": ["declarativeNetRequest"],

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["dist/Vencord.js"],
            "all_frames": true,
            "world": "MAIN"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["dist/*", "vendor/*"],
            "matches": ["*://*.discord.com/*"]
        }
    ],

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "modifyResponseHeaders",
                "enabled": true,
                "path": "modifyResponseHeaders.json"
            }
        ]
    }
}
