{
    "manifest_version": 2,
    "minimum_chrome_version": "91",

    "name": "Cidercord (Unofficial Vencord)",
    "description": "쉽게 사이다 api를 사용할 수 있게 해주는 브라우저 확장 프로그램입니다.",
    "author": "Saintliy",
    "homepage_url": "https://github.com/giyeoum/UnofficialCiderVencord",
    "icons": {
        "128": "icon.png"
    },

    "permissions": ["webRequest", "webRequestBlocking", "*://*.discord.com/*", "https://raw.githubusercontent.com/*"],

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["dist/Vencord.js"],
            "all_frames": true,
            "world": "MAIN"
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources": ["dist/Vencord.js", "dist/Vencord.css"],

    "browser_specific_settings": {
        "gecko": {
            "id": "vencord-firefox@vendicated.dev",
            "strict_min_version": "128.0"
        }
    }
}
